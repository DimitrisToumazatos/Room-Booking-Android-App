<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/material_dynamic_secondary95">
    <TextView
        android:id="@+id/stPrice"
        android:layout_width="134dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="serif"
        android:text="Min Price:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/endPrice"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ownerNameText" />

    <EditText
        android:id="@+id/priceEditText"
        android:layout_width="154dp"
        android:layout_height="66dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/stPrice"
        app:layout_constraintStart_toStartOf="@+id/stPrice"
        app:layout_constraintTop_toBottomOf="@+id/stPrice" />

    <TextView
        android:id="@+id/endPrice"
        android:layout_width="134dp"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="serif"
        android:text="Max price:"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ownerNameText" />

    <EditText
        android:id="@+id/priceText"
        android:layout_width="140dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/endPrice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/endPrice"
        app:layout_constraintTop_toBottomOf="@+id/endPrice" />

    <TextView
        android:id="@+id/startingDate"
        android:layout_width="134dp"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:fontFamily="serif"
        android:text="Starting date:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/departureDate"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceEditText" />

    <EditText
        android:id="@+id/startingDateText"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/startingDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/startingDate"
        app:layout_constraintTop_toBottomOf="@+id/startingDate" />

    <TextView
        android:id="@+id/departureDate"
        android:layout_width="134dp"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="serif"
        android:text="Departure date:"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceText" />

    <EditText
        android:id="@+id/departureDateText"
        android:layout_width="138dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/departureDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/departureDate"
        app:layout_constraintTop_toBottomOf="@+id/departureDate" />

    <TextView
        android:id="@+id/area"
        android:layout_width="134dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:text="Area of the room:"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/persons"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startingDateText" />

    <EditText
        android:id="@+id/areaText"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:ems="10"
        android:hint="Area"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/area"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/area"
        app:layout_constraintTop_toBottomOf="@+id/area" />

    <TextView
        android:id="@+id/persons"
        android:layout_width="134dp"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="serif"
        android:text="Room capacity:"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/departureDateText" />

    <EditText
        android:id="@+id/personsText"
        android:layout_width="133dp"
        android:layout_height="68dp"
        android:ems="10"
        android:hint="Persons"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/persons"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/persons"
        app:layout_constraintTop_toBottomOf="@+id/persons" />

    <TextView
        android:id="@+id/stars"
        android:layout_width="155dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:text="Stars:"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/filtersText"
        app:layout_constraintStart_toStartOf="@+id/filtersText"
        app:layout_constraintTop_toBottomOf="@+id/filtersText" />

    <EditText
        android:id="@+id/ownerNameText"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Stars"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/stars"
        app:layout_constraintStart_toStartOf="@+id/stars"
        app:layout_constraintTop_toBottomOf="@+id/stars" />

    <TextView
        android:id="@+id/filtersText"
        android:layout_width="387dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="       Provide the filters,we will handle the rest🛠️ "
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ownerNameText"
        app:layout_constraintVertical_bias="0.781"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
