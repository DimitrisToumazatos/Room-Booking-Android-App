<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_secondary95"
    >


    <ListView
        android:id="@+id/reservationPerAreaList"
        android:layout_width="358dp"
        android:layout_height="485dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/reservationPerAreaListText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reservationPerAreaListText"
        app:layout_constraintTop_toBottomOf="@+id/reservationPerAreaListText" />

    <TextView
        android:id="@+id/reservationPerAreaListText"
        android:layout_width="345dp"
        android:layout_height="72dp"
        android:layout_marginTop="32dp"
        android:text="Your Reservations Per Area:"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reservationPerAreaExitButton"
        android:layout_width="202dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:text="Exit"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservationPerAreaList" />
</androidx.constraintlayout.widget.ConstraintLayout>
